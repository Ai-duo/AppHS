                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1.2"
                    android:paddingLeft="@dimen/firstpagepadd"
                    android:paddingTop="@dimen/firstpagepadd"
                    android:paddingRight="@dimen/firstpagepadd"
                    android:paddingBottom="@dimen/firstpagepadd"
                    android:src="@drawable/wd" />

                <TextView
                    android:textColor="@color/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="温度"
                    android:textSize="@dimen/firstpagetextsize" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{live.wea_wendu+`\n`}"
                    android:textSize="@dimen/firstpageindexsize" />
