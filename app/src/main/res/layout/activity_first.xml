                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{live.wea_vis+`\n`}"
                    android:textSize="@dimen/firstpageindexsize" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                   />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>