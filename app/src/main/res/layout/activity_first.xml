                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{`日最高\n`+live.wea_Maxwendu+`\n`}"
                    android:textSize="@dimen/firstpageindexsize" />
