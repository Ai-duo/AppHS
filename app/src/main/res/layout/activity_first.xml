    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="live"
            type="com.add.appxm.Live" />
        <variable
            name="dmgd"
            type="com.add.appxm.Dmgd" />

    </data>

    <LinearLayout
